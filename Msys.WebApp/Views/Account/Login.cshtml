@model Msys.WebApp.Models.LoginViewModel

@{
    ViewBag.Title = Resources.Login.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false)
                         <!--Màn hình đăng nhập-->
                        <h2>Login to your account</h2>
                        @Html.TextBoxFor(m => m.LoginInfo.UserName, new { placeholder = Resources.Login.LblPlaceholderUsername })
                        @Html.TextBoxFor(m => m.LoginInfo.Password, new { type="password", placeholder = Resources.Login.LblPlaceholderPassword })
                        <span>
                            @Html.CheckBoxFor(m => m.LoginInfo.RememberMe)
                            @Html.LabelFor(m => m.LoginInfo.RememberMe)
                        </span>
                        <button type="submit" class="btn btn-default">@Resources.Login.BtnLogIn</button>
                    }
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">HOẶC</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false)
                    <!--sign up form-->
                    <h2>@Resources.Login.LblNewUser</h2>
                    @Html.TextBoxFor(m => m.RegisterInfo.UserName, new { placeholder = Resources.Login.LblPlaceholderUsername })
                    @Html.TextBoxFor(m => m.RegisterInfo.Password, new { type = "password", placeholder = Resources.Login.LblPlaceholderPassword })
                    @Html.TextBoxFor(m => m.RegisterInfo.RePassword, new { type = "password", placeholder = Resources.Login.LblPlaceholderRePassword })
                    <button type="submit" class="btn btn-default">@Resources.Login.BtnSignup</button>
                }
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->