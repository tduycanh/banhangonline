@model Home.HomeModel.HomeInfoModel
@using MSys.WebApp;

@{
    var productLst = Model.listFirstProductInfo;
}
      
<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Thông tin sản phẩm</h2>
    @foreach (var pro in productLst)
    {
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        <img src="@pro.image_url" alt="" />
                        <h2>@MSys.Core.Util.DecimalUtil.DecimalToMoney(pro.price)</h2>
                        <p>@pro.product_name</p>
                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ</a>
                    </div>
                    <div class="product-overlay">
                        <div class="overlay-content">
                            <h2>@MSys.Core.Util.DecimalUtil.DecimalToMoney(pro.price)</h2>
                            <p>@pro.product_name</p>
                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ</a>
                        </div>
                    </div>
                    @if (pro.price_percent != 0)
                    {
                        <img src="~/Content/images/home/sale.png" class="new" alt="" />
                    }
                    else if (pro.create_date != null && DateTime.Now.Subtract(Convert.ToDateTime(pro.create_date)).Days <= 7)
                    {
                        <img src="~/Content/images/home/new.png" class="new" alt="" />
                    }
                </div>
                <div class="choose">
                    <ul class="nav nav-pills nav-justified">
                        <li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                        <li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div><!--features_items-->