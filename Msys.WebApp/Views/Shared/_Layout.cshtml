@*@using MSys.WebApp.Common.Const.GlobalResources*@

<!DOCTYPE html>
<html lang="ja">
<head>
    <!--Laytout for PC-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Book Store</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <link href="css/prettyPhoto.css" rel="stylesheet">
    <link href="css/price-range.css" rel="stylesheet">
    <link href="css/animate.css" rel="stylesheet">
    <link href="css/main.css" rel="stylesheet">
    <link href="css/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">

    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- jQuery UI -->
    @Styles.Render("~/bcj/css")
    @RenderSection("CSS", required:false)

</head>
<body>
    <!-- Header -->
    <header id="header-page">

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <a href="index.html"><img src="~/Content/images/home/logo.png" alt="" width="100" height="20" /></a>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()

                                if (Request.IsAuthenticated)
                                {
                                    <ul class="nav navbar-nav navbar-right">
                                        <li>
                                            <a>Xin chào, @User.Identity.Name</a>
                                        </li>
                                        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-lock"></i>Đăng xuất</a></li>
                                    </ul>

                                    <ul class="nav navbar-nav">
                                        <li><a href="#"><i class="fa fa-user"></i> Tài khoản</a></li>
                                        <li><a href="#"><i class="fa fa-star"></i> Yêu thích</a></li>
                                        @*<li><a href="#"><i class="fa fa-crosshairs"></i> Xác nhận đơn hàng</a></li>*@
                                        <li><a href="/mycart/mycart"><i class="fa fa-shopping-cart"></i> Giỏ hàng</a></li>
                                    </ul>
                                }
                                else
                                {
                                    <ul class="nav navbar-nav navbar-right">
                                        <li><a href="/account/login/"><i class="fa fa-lock"></i>Đăng nhập</a></li>
                                    </ul>
                                }
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

        @RenderPage("~/Views/Shared/_Header.cshtml")
        @RenderPage("~/Views/Shared/_SubHeader.cshtml")
    </header>
    <!-- Body -->
    @RenderBody()

    @RenderPage("~/Views/Shared/_Footer.cshtml")
    @Scripts.Render("~/bcj/js")
    @RenderSection("Script", required:false)
</body>
</html>
